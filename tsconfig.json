{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"] 
}